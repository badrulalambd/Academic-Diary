<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:id="@+id/layout_list_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:background="#4CAF50"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >
        <ImageView
            android:id="@+id/imageview_id"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:layout_gravity="center_vertical"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            >
            <TextView
                android:id="@+id/textview_category_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOP-HEADER"
                android:maxLines="1"
                android:textSize="22sp"
                android:ellipsize="end"
                android:background="#FF5722"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/textview_title_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is the title of this item"
                android:textSize="20sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <TextView
                android:id="@+id/textview_description_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We are going to design and develop an app for our school. Machuakhal adarsha academy. Situated in Chandpur at Matlab"
                android:maxLines="2"
                android:textSize="18sp"
                android:ellipsize="end"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>